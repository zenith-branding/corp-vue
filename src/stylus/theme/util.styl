// h1 heading
.main-heading
    font-size: 2rem

// full screen height
.vh-100
    height 100vh
    overflow: hidden

// Invoices table font size
.table.invoices
    font-size 0.9rem

// table padding
.table thead th,
.table-sm th, .table-sm td
    padding 0.45rem 0.47rem!important
    vertical-align: middle


//table columns
.col-actions
    min-width 110px

//table action icons
.icon-button
    display:inline-block;
    height:23px;
    width:23px;
    text-align:center;
    border-radius:50%;
    color:$white
    transition:.6s;
    background:#28313f;
    font-size:1rem;
    margin-right: 2px
    position:relative
    // :hover
    //     background:#3ab048
    //     color:$white
    &.sidebar
        height 2rem
        width 2rem

.icon-button i
    position:absolute;
    color: $white
    top:50%;
    left:50%;
    transform:translate(-50%,-50%);
    display:block
    font-size:0.9rem;
    :hover
        background:#3ab048
        color:$white


// accordion tabs
ul.accordion-tabs
    li a
        font-size: .9rem
    li.active
        .btn
            background: $infoBtnHov
// list notes
.list-group.notes
    .list-group-item
        border-radius: 0px

.list-selector
    color $gray-800

.btn 
  cursor: pointer

.badge
    font-size 85%

.list-group-item
    padding: 0.5rem 1.25rem;
    border-radius: 40px
    line-height 1.5
.card-body
    line-height: 1.5